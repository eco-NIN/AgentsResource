{
  "agent_name": "论文一键转Markdown",
  "api_endpoint": "https://b56465a80c33.ngrok-free.app/api/v1/paper2markdown",
  "method": "POST",
  "description": "上传一篇或多篇PDF格式的学术论文，AI将精准解析文档内容和结构，将其转换为格式规范、易于编辑和发布的Markdown文档。",
  "input_schema": [
    {
      "key": "pdf_files[]",
      "label": "上传论文 (可多选)",
      "type": "file",
      "required": true,
      "multiple": true,
      "accept": ".pdf"
    },
    {
      "key": "mode",
      "label": "处理模式",
      "type": "select",
      "required": true,
      "default": "single",
      "options": [
        { "label": "单文件处理 (为每个PDF生成独立文档)", "value": "single" },
        { "label": "批量处理 (将所有PDF合并处理)", "value": "batch" }
      ],
      "description": "“单文件”为每个上传的PDF生成一个MD文件；“批量”将所有PDF视为一个整体项目进行处理。"
    }
  ],
  "options_payload_wrapper": "options",
  "output_type": "markdown",
  "output_label": "生成的Markdown文档",
  "status_polling": {
    "enabled": true,
    "status_field": "status",
    "result_field": "result.download_url",
    "polling_url_field": "status_url"
  }
}